<Application
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Soup.View.App"
	xmlns:local="using:Soup.View"
	RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<!-- Use system theme -->
	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
		<StyleInclude Source="/views/graph-viewer.axaml"/>
		<StyleInclude Source="/views/selected-button.axaml"/>
	</Application.Styles>
</Application>