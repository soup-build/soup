<Styles
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:views="using:Soup.View.Views"
	xmlns:paz="using:Avalonia.Controls.PanAndZoom">
	<Design.PreviewWith>
		<views:GraphViewer />
	</Design.PreviewWith>

	<StyleInclude Source="/views/graph-viewer-item.axaml"/>

	<Style Selector="Path.graphViewerPath">
		<Setter Property="Stroke" Value="{DynamicResource SystemControlForegroundAccentBrush}" />
		<Setter Property="StrokeThickness" Value="2" />
	</Style>

	<Style Selector="views|GraphViewer">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<ScrollViewer
					HorizontalScrollBarVisibility="Visible"
					VerticalScrollBarVisibility="Visible"
					x:Name="Scroller">
					<paz:ZoomBorder
						Name="ZoomBorder"
						Stretch="None"
						ZoomSpeed="1.2"
						PanButton="Left"
						MaxZoomX="100"
						MaxZoomY="100"
						MinZoomX="0.1"
						MinZoomY="0.1" >
						<Canvas x:Name="RootCanvas" />
					</paz:ZoomBorder>
				</ScrollViewer>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>