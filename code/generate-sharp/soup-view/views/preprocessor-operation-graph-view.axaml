<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Soup.View.ViewModels"
	xmlns:views="using:Soup.View.Views"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Soup.View.Views.PreprocessorOperationGraphView"
	x:CompileBindings="True"
	x:DataType="vm:PreprocessorOperationGraphViewModel"
	d:DataContext="{x:Static vm:DesignData.ExamplePreprocessorOperationGraph}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" MinWidth="150" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" MinWidth="150" />
		</Grid.ColumnDefinitions>
		<views:GraphViewer
			Graph="{Binding Graph}"
			SelectedNode="{Binding SelectedNode, Mode=TwoWay}" />
		<GridSplitter
			Grid.Column="1"
			Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
		<TreeView
			Grid.Column="2"
			DataContext="{Binding SelectedOperation}"
			ItemsSource="{Binding Properties}">
			<TreeView.ItemTemplate>
				<TreeDataTemplate ItemsSource="{Binding Children}">
					<TextBlock Text="{Binding Name}"/>
				</TreeDataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>
	</Grid>
</UserControl>